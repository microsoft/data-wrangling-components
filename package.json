{
	"name": "@data-wrangling-components/project",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"postinstall": "husky install",
		"clean": "yarn workspaces foreach -pv run clean",
		"build": "yarn workspaces foreach -piv --topological-dev run build",
		"start": "yarn workspaces foreach -piv run start",
		"deploy": "yarn workspaces foreach -piv run deploy",
		"lint": "essex lint --fix",
		"git_is_clean": "essex git-is-clean",
		"prettify": "essex prettify",
		"test": "yarn jest",
		"generate_schema": "typescript-json-schema javascript/schema/tsconfig.json WorfklowJson > schema/workflow.json",
		"jest": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand",
		"ci": "run-s build generate_schema lint jest git_is_clean",
		"publish_packages": "yarn workspaces foreach --exclude '@data-wrangling-components/project' --exclude '@data-wrangling-components/schema' --exclude '@data-wrangling-components/webapp' -pv npm publish --tolerate-republish --access public",
		"cut_schema": "yarn node scripts/release-schema.mjs",
		"release": "run-s publish_packages cut_schema",
		"update_sdks": "yarn dlx @yarnpkg/sdks vscode"
	},
	"prettier": "@essex/prettier-config",
	"devDependencies": {
		"@essex/eslint-config": "^20.3.5",
		"@essex/eslint-plugin": "^20.3.6",
		"@essex/jest-config": "^21.0.11",
		"@essex/prettier-config": "^18.0.2",
		"@essex/scripts": "^22.0.3",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0.34",
		"@types/semver": "^7.3.9",
		"arquero": "^4.8.8",
		"eslint": "^8.15.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"jest-environment-jsdom": "^28.1.0",
		"lint-staged": "^12.4.1",
		"node-fetch": "^3.2.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"semver": "^7.3.7",
		"typescript": "^4.6.4",
		"typescript-json-schema": "^0.53.0"
	},
	"workspaces": [
		"javascript/*"
	],
	"packageManager": "yarn@3.2.1"
}
